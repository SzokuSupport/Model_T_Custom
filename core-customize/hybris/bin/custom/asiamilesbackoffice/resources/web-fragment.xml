<web-fragment xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
          http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd"
	version="3.0">
	<display-name>asiamiles_backoffice</display-name>
	<name>asiamilesbackoffice_fragment</name>

	<filter>
		<filter-name>logoutFilter</filter-name>
		<filter-class>com.asiamiles.backoffice.filters.IdpLogoutFilter</filter-class>
		<async-supported>true</async-supported>
	</filter>
	<filter-mapping>
		<filter-name>logoutFilter</filter-name>
		<url-pattern>/idp_logout</url-pattern>
	</filter-mapping>
	
	<filter>
		<filter-name>idpFilter</filter-name>
		<filter-class>com.asiamiles.backoffice.filters.IdpTokenFilter</filter-class>
		<async-supported>true</async-supported>
		<init-param>
			<param-name>excludedPages</param-name>
			<param-value>/j_spring_security_logout</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>idpFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<ordering>
		<after>
			<name>webfragment_backofficeFilterChain</name>
		</after>
	</ordering>

</web-fragment>