				<ref bean="pageZonesLabelComponentTypeAttributePopulator" />
			</set>
		</property>
	</bean> -->


	<bean id="pageZonesComponentTypePopulator"
		class="de.hybris.platform.cmsfacades.types.populator.CmsStructureTypeComponentTypeAttributePopulator">
		<property name="cmsStructureType" value="EditableDropdown" />
	</bean>

	<bean id="pageZoneUriPopulator" class="de.hybris.platform.cmsfacades.types.populator.UriComponentTypeAttributePopulator">
		<property name="uri" value="/asiamilespreviewwebservices/v1/sites/asiamiles/zones" />
	</bean>

	<bean id="pageZonesIdComponentTypeAttributePopulator"
		class="de.hybris.platform.cmsfacades.types.populator.IdComponentTypeAttributePopulator">
		<property name="idAttribute" value="isocode" />
	</bean>
	<bean id="pageZonesLabelComponentTypeAttributePopulator"
		class="de.hybris.platform.cmsfacades.types.populator.LabelComponentTypeAttributePopulator">
		<property name="labelAttributes">
			<list>
				<value>name</value>
			</list>
		</property>
	</bean>
</beans>