<items xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:noNamespaceSchemaLocation="items.xsd">

	<itemtypes>
		<itemtype code="Product" autocreate="false" generate="false">
			<description>Extending the Product type from core with additional attributes for easy media uploading.</description>
			<attributes>
				<attribute qualifier="easyMediaGallery" type="MediaList">
					<persistence type="property" />
				</attribute>
				
				<attribute qualifier="needResizing" type="java.lang.Boolean">
                <modifiers read="true" write="true" search="true" optional="true"/>
                <defaultvalue>Boolean.TRUE</defaultvalue>
                <persistence type="property"/>
            </attribute>
			</attributes>
		</itemtype>
	</itemtypes>
</items>
